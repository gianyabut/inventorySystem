@using Inventory.LunarMed.Web.Models;
@model List<UnitSizeViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display">
    <thead>
        <tr>
            <th>
                Unit Size Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr class="@((client.UnitSizeId % 2) == 1 ? "odd" : "even")">
                <td>@Html.DisplayFor(modelItem => client.UnitSizeId)</td>
                <td>@Html.DisplayFor(modelItem => client.Name)</td>
                <td>@Html.DisplayFor(modelItem => client.Description)</td>
                <td><a href="#" class="dt-link edit-unitSize" style="text-decoration: none;"><i class="icon-edit dt-icon"></i> Edit</a> | <a href="#" class="dt-link delete-unitSize-conf" style="text-decoration: none;"><i class="icon-remove dt-icon"></i> Delete</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Unit Size Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>
        </tr>
    </tfoot>
</table>
