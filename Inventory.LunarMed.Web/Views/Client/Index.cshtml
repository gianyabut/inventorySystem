@model List<Inventory.LunarMed.Web.Models.ClientViewModel>
@{
    ViewBag.Title = "Clients";
}


<div class="span9">
    <div class="content">
        <div class="module">
            <div class="module-head overflow-hidden">
                <h3 class="pull-left">
                    Clients
                </h3>
                <div class="pull-right">
                    <a class="btn btn-small btn-info" data-toggle="modal" data-target="#add-new-client">Add New</a>
                </div>
            </div>
            <div class="module-body table">
                <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display">
                    <thead>
                        <tr>
                            <th>
                                Client Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Contact Number
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@((item.ClientId % 2) == 1 ? "odd" : "even")">
                                <td>@Html.DisplayFor(modelItem => item.ClientId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                                <td><a href="#" class="dt-link" style="text-decoration: none;"><i class="icon-edit dt-icon"></i> Edit</a> | <a href="#" class="dt-link" style="text-decoration: none;"><i class="icon-remove dt-icon"></i> Delete</a></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>
                                Client Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Contact Number
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <!--/.module-->
    </div>
    <!--/.content-->
</div>
<!--/.span9-->


@{ Html.RenderPartial("_AddNewClientModal"); }
@section Scripts
{
    <script src="@Url.Content("~/Scripts/pages/client.js")"></script>
}