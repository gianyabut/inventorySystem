@using Inventory.LunarMed.Web.Models;
@model List<ClientViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display">
    <thead>
        <tr>
            <th>
                Client Id
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Contact Number
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr class="@((client.ClientId % 2) == 1 ? "odd" : "even")">
                <td>@Html.DisplayFor(modelItem => client.ClientId)</td>
                <td>@Html.DisplayFor(modelItem => client.Name)</td>
                <td>@Html.DisplayFor(modelItem => client.Address)</td>
                <td>@Html.DisplayFor(modelItem => client.ContactNumber)</td>
                <td><a href="#" class="dt-link edit-client" style="text-decoration: none;"><i class="icon-edit dt-icon"></i> Edit</a> | <a href="#" class="dt-link delete-client-conf" style="text-decoration: none;"><i class="icon-remove dt-icon"></i> Delete</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Client Id
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Contact Number
            </th>
            <th>
                Action
            </th>
        </tr>
    </tfoot>
</table>