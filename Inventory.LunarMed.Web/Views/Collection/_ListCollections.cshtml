@using Inventory.LunarMed.Web.Models;
@model List<CollectionViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display">
    <thead>
        <tr>
            <th>
                Collection Id
            </th>
            <th>
                Customer PO Number
            </th>
            <th>
                Check Number
            </th>
            <th>
                Amount
            </th>
            <th>
                Balance
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var collection in Model)
        {
        <tr class="@((collection.CollectionId % 2) == 1 ? "odd" : "even")">
            <td>@Html.DisplayFor(modelItem => collection.CollectionId)</td>
            <td>@Html.DisplayFor(modelItem => collection.CustomerPONumber)</td>
            <td>@Html.DisplayFor(modelItem => collection.CheckNumber)</td>
            <td>@Html.DisplayFor(modelItem => collection.Amount)</td>
            <td>@Html.DisplayFor(modelItem => collection.Balance)</td>
            <td><a href="#" class="dt-link edit-collection" style="text-decoration: none;"><i class="icon-edit dt-icon"></i> Edit</a> | <a href="#" class="dt-link delete-collection-conf" style="text-decoration: none;"><i class="icon-remove dt-icon"></i> Delete</a></td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Collection Id
            </th>
            <th>
                Customer PO Number
            </th>
            <th>
                Check Number
            </th>
            <th>
                Amount
            </th>
            <th>
                Balance
            </th>
            <th>
                Action
            </th>
        </tr>
    </tfoot>
</table>

