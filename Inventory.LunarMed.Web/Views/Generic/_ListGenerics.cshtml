@using Inventory.LunarMed.Web.Models;
@model List<GenericViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display">
    <thead>
        <tr>
            <th>
                Generic Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var generic in Model)
        {
            <tr class="@((generic.GenericId % 2) == 1 ? "odd" : "even")">
                <td>@Html.DisplayFor(modelItem => generic.GenericId)</td>
                <td>@Html.DisplayFor(modelItem => generic.Name)</td>
                <td>@Html.DisplayFor(modelItem => generic.Description)</td>
                <td><a href="#" class="dt-link edit-generic" style="text-decoration: none;"><i class="icon-edit dt-icon"></i> Edit</a> | <a href="#" class="dt-link delete-generic-conf" style="text-decoration: none;"><i class="icon-remove dt-icon"></i> Delete</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Generic Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Action
            </th>
        </tr>
    </tfoot>
</table>

