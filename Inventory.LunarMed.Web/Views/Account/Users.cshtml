@using Inventory.LunarMed.Web.Models;
@model ListUsersViewModel
@{
    ViewBag.Title = "Users";
}

<div class="span9">
    <div class="content">
        @Html.Partial("_ViewMessageList", Model.Messages)
        <div class="module">
            <div class="module-head overflow-hidden">
                <h3 class="pull-left">
                    Users
                </h3>
                <div class="pull-right">
                    <a class="btn btn-small btn-info" href="@Url.Action("Register", "Account")">Add New</a>
                </div>
            </div>
            <div class="module-body table">
                @Html.Partial("_ListUsers", Model.Users)
            </div>
        </div>
        <!--/.module-->
    </div>
    <!--/.content-->
</div>
<!--/.span9-->

<div id="modalContainer" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <div class="control-group">
                    <div class="controls">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        initDataTable();

        // This event acts like the Confirmation message for the Delete Operation
        $('body').on('click', '.delete-user-conf', function (e) {
            // Cleanup
            cleanModal();

            // Display the Confirmation Message with its contents
            $('.modal-title').html('Delete User Confirmation');

            var id = $(this).parent().parent().children('td:first').text();
            var name = $(this).parent().parent().children('td:nth-child(2)').text();
            $('.modal-body').append('<h5>Are you sure you want to delete this user?</h5><br /><b>Name</b>: ' + name);
            $('.modal-body').append('<input type="hidden" id="hfUserId" value="' + id + '" />');
            $('.modal-footer').append('<button type="button" class="btn btn-info delete-user">Delete</button>');
            $('#modalContainer').modal();
        });

        // This is the delete collection click event and calls the ajax service to delete
        $('body').on('click', '.delete-user', function (e) {
            var url = "/Account/Delete"; // Full URL
            var data = JSON.stringify({ id: $('#hfUserId').val() });

            $.ajax({
                url: url,
                data: data,
                contentType: "application/json;charset=utf-8",
                type: "POST",
                success: function (result) {
                    $('#divMessages').html(result);
                    loadData();
                    $('#modalContainer').modal('hide');
                }
            });
        });

        function loadData() {
            $.ajax({
                url: "/Account/UserList",
                type: "GET",
                success: function (result) {
                    $('.module-body').html('').html(result);
                    initDataTable();
                }
            });
        }

    </script>
}