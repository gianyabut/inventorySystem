@using Inventory.LunarMed.Web.Models;
@model List<UserViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display">
    <thead>
        <tr>
            <th>
                User Id
            </th>
            <th>
                Username
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var user in Model)
            {
                <tr class="@((count % 2) == 1 ? "odd" : "even")">
                    <td>@Html.DisplayFor(modelItem => user.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => user.Username)</td>
                    <td><a href="#" class="dt-link delete-user-conf" style="text-decoration: none;"><i class="icon-remove dt-icon"></i> Delete</a></td>
                </tr>
                count++;
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                User Id
            </th>
            <th>
                Username
            </th>
            <th>
                Action
            </th>
        </tr>
    </tfoot>
</table>


