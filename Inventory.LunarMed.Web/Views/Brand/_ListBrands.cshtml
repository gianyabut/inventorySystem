@using Inventory.LunarMed.Web.Models;
@model List<BrandViewModel>

<table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	display">
    <thead>
        <tr>
            <th>
                Brand Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Generic Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr class="@((brand.BrandId % 2) == 1 ? "odd" : "even")">
                <td>@Html.DisplayFor(modelItem => brand.BrandId)</td>
                <td>@Html.DisplayFor(modelItem => brand.Name)</td>
                <td>@Html.DisplayFor(modelItem => brand.Description)</td>
                <td>@Html.DisplayFor(modelItem => brand.GenericName)</td>
                <td><a href="#" class="dt-link edit-brand" style="text-decoration: none;"><i class="icon-edit dt-icon"></i> Edit</a> | <a href="#" class="dt-link delete-brand-conf" style="text-decoration: none;"><i class="icon-remove dt-icon"></i> Delete</a></td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>
                Brand Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Generic Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </tfoot>
</table>

